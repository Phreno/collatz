MAX_STEP=1000000

collatz = (input)->
  number=input
  result=[]
  while result.indexOf(number) is -1
    result.push number
    if number % 2 is 0 then number /= 2
    else number = 3*number + 1
    if result.length > MAX_STEP
      number="[#{MAX_STEP}+]"
      break
  result.push "##{number}"
  console.log(result.join ";")

collatz process.argv[2]
